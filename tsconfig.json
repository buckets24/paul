{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "jexity-app/*": ["jexity-app/*"]
    },
    "noUnusedLocals": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".eslintrc.js", "next.config.js"],
  "exclude": ["node_modules"]
}
